    },
    "depends": "adb",
    "url": "https://dl.google.com/android/repository/commandlinetools-win-8092744_latest.zip",
    "hash": "5de99ed67cb2e30fe443baf8b282d1b0b6247d0c25c6d888a7e8657b3b35c281",
    "bin": [
        "tools\\proguard\\bin\\proguard.bat",
        "tools\\proguard\\bin\\proguardgui.bat",
        "tools\\proguard\\bin\\retrace.bat",
        "tools\\emulator.exe",
        "tools\\emulator-check.exe",
        "tools\\mksdcard.exe",
        "tools\\monitor.bat"
    ],
    "post_install": [
        "if (Test-Path \"$(appdir adb $global)\") {",
        "    cmd /c mklink /j \"$dir\\platform-tools\" \"$(appdir adb $global)\\current\\platform-tools\" | out-null",
        "    attrib \"$(appdir adb $global)\\current\\platform-tools\" +R /L",
        "}"
    ],
    "env_add_path": "tools\\bin",
    "env_set": {
        "ANDROID_HOME": "$dir",
        "PROGUARD_HOME": "$dir\\tools\\proguard"
    },
    "persist": [
        ".knownPackages",
        "build-tools",
        "cmdline-tools",
        "emulator",
        "extras",
        "licenses",
        "patcher",
        "platforms",
        "sources",
        "system-images"
    ]
}
